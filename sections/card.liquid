{%- style -%}
  {{  heading_font | font_face: font_display: 'swap' }}
  {{  pagination_font | font_face: font_display: 'swap' }}
  {{  sub_heading_font | font_face: font_display: 'swap' }}
  {{  slide_heading_font | font_face: font_display: 'swap' }}
  {{  button_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .articles-top-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    flex-wrap: wrap;
  }

  .articles-heading-{{ section.id }} {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
  }

  .articles-pagin-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .articles-pagin-{{ section.id }} p,
  .articles-pagin-{{ section.id }} span {
    margin: 0px;
    font-size: {{ pagination_size_mobile }}px;
    color: {{ pagination_color }};
    line-height: {{ pagination_height }}%;
    text-transform: unset;
  }

  .articles-items-{{ section.id }} {
    position: relative;
    margin-top: {{ slider_mt | times: 0.75 | round: 0 }}px;
    margin-left: auto;
    margin-right: auto;
    max-width: {{ slider_width_mobile }}%;
    width: 100%;
  }

  .articles-slider-{{ section.id }} {
    padding: 60px 0px 80px !important;
    max-width: 1400px;
  }

  .articles-slide-{{ section.id }} {
    position: relative;
    transition: all 0.3s ease 0s;
  }

  .articles-slide-{{ section.id }}::before {
    content: '';
    position:absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    background-color: black;
    opacity: 0.7;
    transition: all 0.3s ease 0s;
    z-index: 1;
  }

  .articles-slide-{{ section.id }}.swiper-slide-active {
    z-index: 2;
  }

  .articles-slide-{{ section.id }}:first-child.swiper-slide-active {
    transform: translateY(-4rem) translateX(0) rotate(-6deg);
  }

  .articles-slide-{{ section.id }}:not(:first-child).swiper-slide-active {
    transform: translateY(-4rem) translateX(0) rotate(7deg);
  }

  .articles-slide-{{ section.id }}.swiper-slide-active::before {
    display: none;
  }

  .articles-slide-{{ section.id }}.nonactive-slide-shadow::before {
    content: '';
    position:absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    background-color: black;
    opacity: 0.7;
    transition: all 0.3s ease 0s;
    z-index: 1;
  }

  .articles-slide-{{ section.id }} {
    display: block;
    box-sizing: border-box;
  }

  .articles-slide-{{ section.id }} img,
  .articles-slide-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ image_radius }}px;
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
  }

  .articles-slide-{{ section.id }} svg path {
    fill: white;
  }

  .articles-texts-{{ section.id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    pointer-events: none;
  }

  .articles-items-{{ section.id }}:hover .articles-texts-{{ section.id }} {
    opacity: 1;
    transition: all 0.3s ease 0s;
  }

  .articles-text-{{ section.id }} {
    margin: 0px auto;
    position: static;
    opacity: 1;
    pointer-events: none;
    width: 100%;
    max-width: 100%;
  }

  .articles-text-{{ section.id }}.hidden-text-mobile {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .articles-subheading-slide-{{ section.id }} {
    pointer-events: none;
  }
  
  .articles-subheading-slide-{{ section.id }} > * {
    margin: 0px;
    font-size: {{ sub_heading_size_mobile }}px;
    color: {{ sub_heading_color }};
    line-height: {{ sub_heading_height }}%;
    text-transform: uppercase;
    text-align: center;
    pointer-events: none;
  }

  .articles-heading-slide-{{ section.id }} {
    pointer-events: none;
    margin-top: {{ slide_heading_mt | times: 0.75 | round: 0 }}px;    
  }
  
  .articles-heading-slide-{{ section.id }} > * {
    margin: 0px;
    font-size: {{ slide_heading_size_mobile }}px;
    color: {{ slide_heading_color }};
    line-height: {{ slide_heading_height }}%;
    text-transform: uppercase;
    text-align: center;
    pointer-events: none;
  }

  .articles-scrollbar-{{ section.id }} {
    height: 1px;
    background-color: #ffffff26;
    margin: 0 auto;
    width: 100px;
    bottom: -35px;
  }

  .articles-scrollbar-{{ section.id }} .swiper-scrollbar-drag {
    display: block;
    height: 3px;
    top: -1px;
    background-color: #fff;
  }

  .articles-button-slide-{{ section.id }} {
    margin: {{ button_mt }}px auto 0px;
    display: block;
    max-width: fit-content;
    font-size: {{ button_size }}px;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: none;
    {% if button_underline %}
      text-decoration: underline;
    {% else %}
      text-decoration: none;
    {% endif %}
  }

  @media(min-width: 768px) {
    .articles-slider-{{ section.id }} {
      padding-top: 120px !important;
    }
  }
  
  @media(min-width: 992px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .articles-heading-{{ section.id }} {
      font-size: {{ heading_size }}px;
    }

    .articles-pagination-{{ section.id }} p,
    .articles-pagination-{{ section.id }} span {
      font-size: {{ pagination_size }}px;
    }

    .articles-items-{{ section.id }} {
      margin-top: {{ slider_mt }}px;
      max-width: {{ slider_width }}%;
    }

     .articles-slider-{{ section.id }} { 
       padding-left: 3.5% !important;
     }

    .articles-slider-{{ section.id }} .swiper-wrapper {
      margin-left: 40px;
    }

    .articles-slide-{{ section.id }} {
      transition: none;
    }

    .articles-slide-{{ section.id }}::before {
      display: none;
    }

    .articles-slide-{{ section.id }}.active-slide {
      z-index: 2;
    }
  
    .articles-slide-{{ section.id }}.nonactive-slide {
      z-index: -1;
    }
    
    .articles-slide-{{ section.id }}.nonactive-slide-shadow::before {
      display: block;
    }

    .articles-subheading-slide-{{ section.id }} > * {
      font-size: {{ sub_heading_size }}px;
    }

    .articles-heading-slide-{{ section.id }} {
      margin-top: {{ slide_heading_mt }}px;    
    }
    
    .articles-heading-slide-{{ section.id }} > * {
      font-size: {{ slide_heading_size }}px;
    }

    .articles-texts-{{ section.id }} {
      position: absolute;
      inset: 0;
      opacity: 0;
      pointer-events: none;
      z-index: 2;
      transition: all 0.3s ease 0s;
    }
    
    .articles-text-{{ section.id }} {
      transition: all 0.3s ease 0s;
    }

    .articles-text-{{ section.id }}.hidden-text {
      position: absolute !important;
      opacity: 0 !important;
      pointer-events: none !important;
      transition: all 0.3s ease 0s;
    }

    .articles-text-{{ section.id }}.hidden-text-mobile {
      position: static;
      opacity: 1;
      pointer-events: none;
      transition: all 0.3s ease 0s;
    }
    
    .articles-scrollbar-{{ section.id }} {
      display: none !important;
    }

    .articles-button-slide-{{ section.id }} {
      display: none !important;
    }
  }
  @media(min-width: 1280px) {
    .articles-text-{{ section.id }} {
      max-width: 50%;
    }
  }
  
