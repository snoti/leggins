      order: 2;
    }
    
    .testimonials-right-{{ section.id }} {
      order: 1;
    }
  </style>
{% endif %}

{% if layout == "image_testimonial" %}
  <style>
    @media(min-width: 1024px) {
      .testimonials-left-{{ section.id }} {
        order: 1;
      }
      
      .testimonials-right-{{ section.id }} {
        order: 2;
      }
    }
  </style>
{% else %}
