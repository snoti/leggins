{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  testimonial_text_font | font_face: font_display: 'swap' }}
  {{  testimonial_author_font | font_face: font_display: 'swap' }}
  {{  testimonial_verified_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .testimonials-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
    text-align: {{ heading_align_mobile }};
  }

  .testimonials-grid-{{ section.id }} {
    margin-top: {{ layout_mt | times: 0.75 | round: 0 }}px;
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    align-items: center;
    gap: {{ layout_gap_mobile }}px;
  }

  .testimonials-left-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat({{ image_row_mobile }}, 1fr);
    gap: {{ image_gap_mobile }}px;
  }

  .testimonials-image-{{ section.id }} {
    border-radius: {{ image_radius }}px;
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
  }

  .testimonials-image-{{ section.id }} img,
  .testimonials-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ image_radius }}px;
  }

  .testimonials-image-{{ section.id }} svg {
    background-color: #DDDDDD;
  }

  .testimonials-right-{{ section.id }} {
    min-width: 0;
  }

  .testimonials-right-inner-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat({{ testimonials_row_mobile }}, 1fr);
    gap: {{ testimonials_gap_mobile }}px;
  }

  .testimonials-item-{{ section.id }} {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: {{ testimonial_padding_vertical | times: 0.75 | round: 0 }}px {{ testimonial_padding_horizontal | times: 0.75 | round: 0 }}px;
    border-radius: {{ testimonial_radius }}px;
    border: {{ testimonial_border_thickness }}px solid {{ testimonial_border_color }};
    background-color: {{ testimonial_bg_color }};
    box-sizing: border-box;
  }

  .testimonials-stars-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 5px;
    flex-wrap: wrap;
  }

  .testimonials-stars-{{ section.id }} svg {
    display: block;
    width: {{ stars_size }}px;
    height: {{ stars_size }}px;
    object-fit: cover;
  }

  .testimonials-text-{{ section.id }} {
    margin: 0px;
    margin-top: {{ testimonial_text_mt | times: 0.75 | round: 0 }}px;
    font-size: {{ testimonial_text_size_mobile }}px;
    color: {{ testimonial_text_color }};
    line-height: {{ testimonial_text_height }}%;
    text-transform: unset;
  }

  .testimonials-bottom-{{ section.id }} {
    margin-top: {{ testimonial_author_mt | times: 0.75 | round: 0 }}px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 10px;
  }

  .testimonials-author-{{ section.id }} {
    margin: 0px;
    font-size: {{ testimonial_author_size_mobile }}px;
    color: {{ testimonial_author_color }};
    line-height: {{ testimonial_author_height }}%;
    text-transform: unset;
    font-weight: 700;
  }

  .testimonials-verified-{{ section.id }} {
    margin: 0px;
    font-size: {{ testimonial_verified_size_mobile }}px;
    color: {{ testimonial_verified_color }};
    line-height: {{ testimonial_verified_height }}%;
    text-transform: unset;
    font-weight: 700;
  }

  .testimonials-btn-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
    width: 100%;
    max-width: 384px;
    margin: 0;
    margin-top: {{ button_mt | times: 0.75 | round: 0 }}px;
    font-size: {{ button_size_mobile }}px;
    font-weight: 700;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical | times: 0.75 | round: 0 }}px {{ button_padding_horizontal | times: 0.75 | round: 0 }}px;
    border-radius: {{ button_radius }}px;
    border: {{ button_border_thickness }}px solid {{ button_border_color }};
    background-color: {{ button_bg_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-btn-{{ section.id }}:hover {
    color: {{ button_hover_color }};
    border: {{ button_border_thickness }}px solid {{ button_border_hover_color }};
    background-color: {{ button_bg_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-btn-{{ section.id }} svg,
  .testimonials-btn-{{ section.id }} img {
    display: block;
    object-fit: contain;
    width: 24px;
    height: 24px;
  }

  .testimonials-btn-{{ section.id }} svg path {
    stroke: {{ button_color }};
  }

  .testimonials-btn-{{ section.id }}:hover svg path {
    stroke: {{ button_hover_color }};
  }

  .testimonials-slider-{{ section.id }} {
    padding-bottom: 40px;
    display: none !important;
  }

  .testimonials-slider-{{ section.id }} .swiper-wrapper {
    align-items: stretch !important;
  }

  .testimonials-slider-{{ section.id }} .swiper-slide {
    height: auto !important;
  }

  .testimonials-pagination-{{ section.id }} {
    position: static !important;
    margin-top: 20px;
    display: flex !important;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }
  

  .testimonials-pagination-{{ section.id }} .swiper-pagination-bullet {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    border: 1px solid {{ testimonial_pagination_color }};
    background-color: white;
    opacity: 1;
  }

  .testimonials-pagination-{{ section.id }} .swiper-pagination-bullet-active {
    background-color: {{ testimonial_pagination_color }};
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .testimonials-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
      text-align: {{ heading_align }};
    }

    .testimonials-grid-{{ section.id }} {
      margin-top: {{ layout_mt }}px;
      grid-template-columns: repeat(2, 1fr);
      gap: {{ layout_gap }}px;
    }

    .testimonials-left-{{ section.id }} {
      grid-template-columns: repeat({{ image_row }}, 1fr);
      gap: {{ image_gap }}px;
    }

    .testimonials-right-inner-{{ section.id }} {
      grid-template-columns: repeat({{ testimonials_row }}, 1fr);
      gap: {{ testimonials_gap }}px;
    }

    .testimonials-item-{{ section.id }} {
      padding: {{ testimonial_padding_vertical }}px {{ testimonial_padding_horizontal }}px;
    }

    .testimonials-text-{{ section.id }} {
      margin-top: {{ testimonial_text_mt }}px;
      font-size: {{ testimonial_text_size }}px;
    }

    .testimonials-bottom-{{ section.id }} {
      margin-top: {{ testimonial_author_mt }}px;
    }

    .testimonials-author-{{ section.id }} {
      font-size: {{ testimonial_author_size }}px;
    }

    .testimonials-verified-{{ section.id }} {
      font-size: {{ testimonial_verified_size }}px;
    }

    .testimonials-btn-{{ section.id }} {
      margin-top: {{ button_mt }}px;
      padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
      font-size: {{ button_size }}px;
    }
  }
  
{%- endstyle -%}

