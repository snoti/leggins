{% comment %} Carrousel images/vidéos style horizontal fluide inspiré de ta capture (sans Swiper) {% endcomment %}

{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}
.carousel-wrapper {
  overflow-x: auto;
  display: flex;
  gap: 16px;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  padding: 0 1rem;
}
.carousel-wrapper::-webkit-scrollbar {
  height: 6px;
}
.carousel-wrapper::-webkit-scrollbar-thumb {
  background: #bbb;
  border-radius: 4px;
}
.carousel-card {
  flex: 0 0 auto;
  scroll-snap-align: start;
  border-radius: 10px;
  overflow: hidden;
  width: 250px;
  height: 400px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08);
  background: #f8f8f8;
  position: relative;
}
.carousel-card img,
.carousel-card video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}
{%- endstyle -%}

<div class="carousel section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="{{ section.settings.heading_size }} {{ section.settings.heading_alignment }}">
        {{ section.settings.title }}
      </h2>
    {% endif %}
    <div class="carousel-wrapper">
      {% for block in section.blocks %}
        <div class="carousel-card" {{ block.shopify_attributes }}>
          {% if block.settings.media_type == 'image' and block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="Image">
          {% elsif block.settings.media_type == 'video' and block.settings.video != blank %}
            {{ block.settings.video | video_tag: autoplay: true, muted: true, loop: true, playsinline: true }}
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder' }}
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Carrousel fluide",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Titre",
      "default": "Découvrez nos médias"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Taille du titre",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" }
      ],
      "default": "h2"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Alignement du titre",
      "options": [
        { "value": "left", "label": "Gauche" },
        { "value": "center", "label": "Centre" },
        { "value": "right", "label": "Droite" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Marge haute",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Marge basse",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "media",
      "name": "Média",
      "settings": [
        {
          "type": "select",
          "id": "media_type",
          "label": "Type de média",
          "options": [
            { "value": "image", "label": "Image" },
            { "value": "video", "label": "Vidéo" }
          ],
          "default": "image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Vidéo Shopify"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Carrousel fluide",
      "blocks": [
        { "type": "media" },
        { "type": "media" },
        { "type": "media" }
      ]
    }
  ]
}
{% endschema %}
