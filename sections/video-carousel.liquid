{% comment %} Section: Carrousel Vidéo scrollable style natif (sans Swiper) pour thème Impact {% endcomment %}

{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}
.video-scroll-container {
  display: flex;
  gap: 16px;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 1rem;
}
.video-scroll-container::-webkit-scrollbar {
  display: none;
}
.video-card {
  flex: 0 0 auto;
  scroll-snap-align: start;
  border-radius: 12px;
  overflow: hidden;
  width: 250px;
  height: 400px;
  background: #f9f9f9;
  box-shadow: 0 4px 8px rgba(0,0,0,0.05);
}
.video-card video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
{%- endstyle -%}

<div class="section-{{ section.id }}-padding page-width">
  {% if section.settings.title != blank %}
    <h2 class="{{ section.settings.heading_size }} {{ section.settings.heading_alignment }}">
      {{ section.settings.title }}
    </h2>
  {% endif %}

  <div class="video-scroll-container">
    {% for block in section.blocks %}
      <div class="video-card" {{ block.shopify_attributes }}>
        {% if block.settings.video != blank %}
          {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true }}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder' }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Carrousel vidéos simple",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Titre",
      "default": "Vos témoignages vidéos"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Taille du titre",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" }
      ],
      "default": "h2"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Alignement du titre",
      "options": [
        { "value": "left", "label": "Gauche" },
        { "value": "center", "label": "Centre" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Marge haute",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Marge basse",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Vidéo",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Vidéo Shopify"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Carrousel vidéos simple",
      "blocks": [
        { "type": "video" },
        { "type": "video" },
        { "type": "video" }
      ]
    }
  ]
}
{% endschema %}
