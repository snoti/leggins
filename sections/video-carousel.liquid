{% comment %} Section: Carrousel Vidéo cliquable avec icône play (style TikTok) pour thème Impact {% endcomment %}

{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}
.video-scroll-container {
  display: flex;
  gap: 16px;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 1rem;
}
.video-scroll-container::-webkit-scrollbar {
  display: none;
}
.video-card {
  position: relative;
  flex: 0 0 auto;
  scroll-snap-align: start;
  border-radius: 12px;
  overflow: hidden;
  width: 250px;
  height: 400px;
  background: #000;
  box-shadow: 0 4px 8px rgba(0,0,0,0.05);
  cursor: pointer;
}
.video-card img,
.video-card video-thumbnail {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}
.video-card .play-icon {
  position: absolute;
  bottom: 12px;
  left: 12px;
  width: 40px;
  height: 40px;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.video-card .play-icon svg {
  width: 18px;
  height: 18px;
  fill: white;
}
{%- endstyle -%}

<div class="section-{{ section.id }}-padding page-width">
  {% if section.settings.title != blank %}
    <h2 class="{{ section.settings.heading_size }} {{ section.settings.heading_alignment }}">
      {{ section.settings.title }}
    </h2>
  {% endif %}

  <div class="video-scroll-container">
    {% for block in section.blocks %}
      {% if block.settings.video != blank %}
        <a href="{{ block.settings.video | video_url }}" class="video-card" {{ block.shopify_attributes }} target="_blank">
          <img src="https://cdn.shopify.com/s/files/1/0000/0000/files/video_placeholder.jpg?v=1" alt="Aperçu vidéo">
          <div class="play-icon">
            <svg viewBox="0 0 24 24"><path d="M8 5v14l11-7z" /></svg>
          </div>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Carrousel vidéos ",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Titre",
      "default": "Vous et ceralyne"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Taille du titre",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" }
      ],
      "default": "h2"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Alignement du titre",
      "options": [
        { "value": "left", "label": "Gauche" },
        { "value": "center", "label": "Centre" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Marge haute",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Marge basse",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Vidéo",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Vidéo Shopify"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Carrousel vidéos cliquables",
      "blocks": [
        { "type": "video" },
        { "type": "video" },
        { "type": "video" }
      ]
    }
  ]
}
{% endschema %}
