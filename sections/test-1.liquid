{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  rating_text_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}
  {{  card_heading_font | font_face: font_display: 'swap' }}
  {{  card_text_font | font_face: font_display: 'swap' }}
  {{  card_author_date_text_font | font_face: font_display: 'swap' }}
  {{  button_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .testimonials-heading-{{ section.id }} {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-align: {{ content_align_mobile }};
    text-transform: unset;
  }

  .testimonials-stars-{{ section.id }} {
    display: flex;
    align-items: end;
    gap: 5px;
  }

  .testimonials-stars-{{ section.id }} svg,
  .testimonials-stars-{{ section.id }} img {
    display: block;
    width: {{ stars_size_mobile }}px;
    height: {{ stars_size_mobile }}px;
    object-fit: cover;
  }

  .testimonials-stars-{{ section.id }} svg {
    background-color: {{ stars_bg_color }}; 
  }

  .testimonials-rating-{{ section.id }} {
    margin-top: {{ rating_text_mt_mobile }}px;
    display: flex;
    align-items: center;
    gap: 5px;
    flex-wrap: wrap;
  }

  .testimonials-rating-text-{{ section.id }},
  .testimonials-rating-{{ section.id }} span {
    margin: 0;
    font-size: {{ rating_text_size_mobile }}px;
    color: {{ rating_text_color }};
    line-height: {{ rating_text_height }}%;
  }

  .testimonials-rating-{{ section.id }} span {
    font-size: {{ rating_text_size_mobile | times: 1.25 | round: 0 }}px;
    font-weight: 700;
  }

  .testimonials-rating-{{ section.id }} .testimonials-stars-{{ section.id }} {
    padding-left: 5px;
  }

  .testimonials-text-{{ section.id }} {
    margin-top: {{ text_mt_mobile }}px;
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
  }

  .testimonials-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
  }

  .testimonials-text-{{ section.id }} strong {
    text-decoration: underline;
  }

  .testimonials-image-{{ section.id }} {
    width: 100px;
    height: 32px;
  }

  .testimonials-image-{{ section.id }} img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .testimonials-slider-wrapper-{{ section.id }} {
    margin-top: {{ scrolling_mt_mobile }}px;
  }

  .testimonials-scrolling-wrap-{{ section.id }} {
    position: relative;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-wrap: nowrap;
    flex-wrap: nowrap;
    background-attachment: scroll !important;
    transform-origin: center;
    gap: {{ scrolling_gap_mobile }}px;
    width: 200vw;
    left: -100vw;
  }

  .testimonials-scrolling-list-{{ section.id }} {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    align-items: center;
    background-attachment: scroll !important;
    -webkit-animation: ticker{{ section.id | replace: '-', '' }} {{ scrolling_velocity_mobile }}s infinite linear;
    animation: ticker{{ section.id | replace: '-', '' }} {{ scrolling_velocity_mobile }}s infinite linear;
    flex-shrink: 0;
    gap: {{ scrolling_gap_mobile }}px;
  }

  .testimonials-slide-{{ section.id }} {
    width: {{ card_width_mobile }}px;
    background-attachment: scroll !important;
    flex-shrink: 0;
    text-decoration: none;
    display: flex !important;
    flex-direction: column;
    justify-content: space-between;
    gap: {{ card_author_date_text_mt_mobile }}px;
    padding: {{ card_padding_vertical_mobile }}px {{ card_padding_horizontal_mobile }}px;
    border-radius: {{ card_radius }}px;
    border: {{ card_border_thickness }}px solid {{ card_border_color }};
    background-color: {{ card_bg_color }};
    box-sizing: border-box !important; 
    height: auto !important;
  }

  .testimonials-top-bar-{{ section.id }},
  .testimonials-slide-top-{{ section.id }},
  .testimonials-slide-bottom-bar-{{ section.id }} {
    display: flex;
    flex-direction: column;
  }

  .testimonials-slide-heading-{{ section.id }} {
    margin: 0;
    margin-top: {{ card_heading_mt_mobile }}px;
    font-size: {{ card_heading_size_mobile }}px;
    color: {{ card_heading_color }};
    line-height: {{ card_heading_height }}%;
    text-align: {{ card_content_align_mobile }};
    font-weight: 700;
    text-transform: unset;
  }

  .testimonials-slide-text-{{ section.id }} {
    margin: 0;
    margin-top: {{ card_text_mt_mobile }}px;
    font-size: {{ card_text_size_mobile }}px;
    color: {{ card_text_color }};
    line-height: {{ card_text_height }}%;
    text-align: {{ card_content_align_mobile }};
    text-transform: unset;
  }

  .testimonials-slide-text-{{ section.id }} span:first-child {
    display: none;
  }

  .testimonials-slide-text-small-{{ section.id }}.active {
    display: none;
  }

  .testimonials-slide-text-big-{{ section.id }} {
    display: none;
  }

  .testimonials-slide-text-big-{{ section.id }}.active {
    display: inline;
  }

  .testimonials-slide-text-btn-{{ section.id }} {
    display: block;
    max-width: fit-content;
    width: 100%;
    background-color: transparent;
    box-shadow: none;
    border: 0px;
    font-size: {{ card_text_size_mobile }}px;
    line-height: {{ card_text_height }}%;
    font-weight: 700;
    margin-top: 10px;
    color: {{ view_color }};
  }

  .testimonials-slide-bottom-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .testimonials-slide-bottom-{{ section.id }} img,
  .testimonials-slide-image-{{ section.id }} img {
    width: {{ author_image_size_mobile }}px;
    height: {{ author_image_size_mobile }}px;
    display: block;
    border-radius: 50%;
    object-fit: cover;
  }
  

  .testimonials-slide-author-date-{{ section.id }} {
    margin: 0;
    font-size: {{ card_author_date_text_size_mobile }}px;
    color: {{ card_author_date_text_color }};
    line-height: {{ card_author_date_text_height }}%;
    text-align: {{ card_content_align_mobile }};
    text-transform: unset;
  }

  .testimonials-btn-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: fit-content;
    gap: 5px;
    margin: 0;
    margin-top: {{ button_mt_mobile }}px;
    font-size: {{ button_size_mobile }}px;
    font-weight: 700;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
    border-radius: {{ button_radius }}px;
    transition: all 0.25s ease 0s;
  }

  .testimonials-btn-{{ section.id }}:hover {
    color: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-btn-{{ section.id }} svg {
    width: 14px;
    height: 14px;
  }

  .testimonials-btn-{{ section.id }} svg path {
    fill: {{ button_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-btn-{{ section.id }}:hover svg path {
    fill: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .testimonials-heading-{{ section.id }} {
      font-size: {{ heading_size }}px;
      text-align: {{ content_align }};
    }

    .testimonials-rating-{{ section.id }} {
      margin-top: {{ rating_text_mt }}px;
    }

    .testimonials-rating-text-{{ section.id }},
    .testimonials-rating-{{ section.id }} span {
      font-size: {{ rating_text_size }}px;
    }

    .testimonials-rating-{{ section.id }} span {
      font-size: {{ rating_text_size | times: 1.25 | round: 0 }}px;
    }

    .testimonials-stars-{{ section.id }} svg,
    .testimonials-stars-{{ section.id }} img {
      width: {{ stars_size }}px;
      height: {{ stars_size }}px;
    }

    .testimonials-text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
    }
  
    .testimonials-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .testimonials-slider-wrapper-{{ section.id }} {
      margin-top: {{ scrolling_mt }}px;
    }

    .testimonials-scrolling-wrap-{{ section.id }} {
      gap: {{ scrolling_gap }}px;
    }
    
    .testimonials-slide-{{ section.id }} {
      width: {{ card_width }}px;
      gap: {{ card_author_date_text_mt }}px;
      padding: {{ card_padding_vertical }}px {{ card_padding_horizontal }}px;
    }

    .testimonials-slide-heading-{{ section.id }} {
      margin-top: {{ card_heading_mt }}px;
      text-align: {{ card_content_align }};
      font-size: {{ card_heading_size }}px;
    }

    .testimonials-slide-text-{{ section.id }} {
      margin-top: {{ card_text_mt }}px;
      font-size: {{ card_text_size }}px;
      text-align: {{ card_content_align }};
    }

    .testimonials-slide-text-btn-{{ section.id }} {
      font-size: {{ card_text_size }}px;
    }

    .testimonials-slide-text-{{ section.id }} span:first-child {
      display: inline;
    }

    .testimonials-slide-text-{{ section.id }} span:not(:first-child),
    .testimonials-slide-text-{{ section.id }} button {
      display: none;
    }

    .testimonials-slide-author-date-{{ section.id }} {
      text-align: {{ card_content_align }};
      font-size: {{ card_author_date_text_size }}px;
    }

    .testimonials-btn-{{ section.id }} {
      margin-top: {{ button_mt }}px;
      padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
      font-size: {{ button_size }}px;
    }

    .testimonials-scrolling-list-{{ section.id }} {
      animation-duration: {{ scrolling_velocity }}s;
      gap: {{ scrolling_gap }}px;
    }

    .testimonials-slide-bottom-{{ section.id }} img {
      width: {{ author_image_size }}px;
      height: {{ author_image_size }}px;
    }

    .testimonials-slide-bottom-{{ section.id }} {
      align-items: center;
    }
  }
  
