{%- style -%}

  {{ heading_font | font_face: font_display: 'swap' }}
  {{ sub_heading_font | font_face: font_display: 'swap' }}
  {{ info_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .video-social-heading-{{ section.id }} {
    text-align: {{ heading_align_mobile }};
  }

  .video-social-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
  }

  .video-social-subheading-{{ section.id }} {
    margin-top: {{ sub_heading_mt_mobile }}px;
    text-align: {{ sub_heading_align_mobile }};
  }

  .video-social-subheading-{{ section.id }} * {
    margin: 0;
    font-size: {{ sub_heading_size_mobile }}px;
    color: {{ sub_heading_color }};
    line-height: {{ sub_heading_height }}%;
    text-transform: unset;
  }

  .video-social-slider-{{ section.id }} {
    margin-top: {{ slider_mt_mobile }}px;
    margin-left: -{{ padding_horizontal_mobile }}rem !important;
    margin-right: -{{ padding_horizontal_mobile }}rem !important;
    padding-left: {{ padding_horizontal_mobile }}rem !important;
    padding-right: {{ padding_horizontal_mobile }}rem !important;
  }

  .video-social-card-{{ section.id }} {
    border-radius: {{ card_radius }}px;
    border: {{ card_border_thickness }}px solid {{ card_border_color }};
    box-sizing: border-box !important;
    overflow: hidden;
    position: relative;
  }

  .video-social-video-{{ section.id }} {
    overflow: hidden;
    position: relative;
    z-index: 1;
  }

  .video-social-video-{{ section.id }} video,
  .video-social-video-{{ section.id }} iframe {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    box-shadow: none;
    border: 0px;
  }

  .video-social-info-{{ section.id }} {
    display: block;
    width: 100%;
    margin: 0;
    text-align: {{ info_align_mobile }};
    font-size: {{ info_size_mobile }}px;
    line-height: {{ info_height }}%;
    color: {{ info_color }};
    text-transform: unset;
    font-weight: 700;
    text-decoration: none;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 2;
    padding: 10px;
  }

  .video-social-btn-prev-{{ section.id }},
  .video-social-btn-next-{{ section.id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    display: flex;
    width: {{ arrow_size_mobile }}px;
    height: {{ arrow_size_mobile }}px;
    border: 0px;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_color }};
    border-radius: {{ arrow_radius }}px;
    background: transparent;
    background: {{ arrow_bg_color }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    box-shadow: 0px 0px 10px 0px rgba(0,0,0,.15);
  }

  .video-social-btn-prev-{{ section.id }} {
    left: 10px;
  }

  .video-social-btn-next-{{ section.id }} {
    right: 10px;
  }

  .video-social-btn-prev-{{ section.id }} .animate-icon,
  .video-social-btn-next-{{ section.id }} .animate-icon {
    pointer-events: none;
    place-items: center;
    display: grid;
  }

  .video-social-btn-prev-{{ section.id }} .animate-icon:before,
  .video-social-btn-next-{{ section.id }} .animate-icon:before {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease-in-out;
    width: {{ arrow_icon_size_mobile }}px;
    height: {{ arrow_icon_size_mobile }}px;
    transform: rotate(calc(1 * 45deg));
    box-sizing: border-box;
    border-style: solid;
    border: 0px;
    border-right: 2px solid currentColor;
    border-top: 2px solid currentColor;
    position: relative;
    left: -1px;
  }

  .video-social-btn-prev-{{ section.id }} .animate-icon:before {
    left: unset;
    right: -1px;
    border-right: 0px;
    border-top: 0px;
    border-bottom: 2px solid currentColor;
    border-left: 2px solid currentColor;
  }

  .video-social-btn-prev-{{ section.id }} .animate-icon:after,
  .video-social-btn-next-{{ section.id }} .animate-icon:after {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease-in-out;
    width: {{ arrow_icon_size_mobile | minus: 0.3 }}px;
    height: 1.6px;
    transform-origin: center;
    opacity: 0;
    background: currentColor;
    transform: scaleX(.5);
  }

  .video-social-btn-prev-{{ section.id }} span,
  .video-social-btn-next-{{ section.id }} span {
    color: {{ arrow_color }};
  }

  .video-social-btn-prev-{{ section.id }}.swiper-button-disabled,
  .video-social-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0;
  }

  .video-social-action-{{ section.id }} {
    position: absolute;
    z-index: 2;
    top: 50%;
    left: 50%;
    transform: translateY(-50%) translateX(-50%);
    width: {{ action_size_mobile }}px;
    height: {{ action_size_mobile }}px;
    border: {{ action_border_thickness }}px solid {{ action_border_color }};
    border-radius: 50%;
    background: {{ action_bg_color | hex_to_rgba: 0.3 }};
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    z-index: 2;
    box-shadow: 0px 0px 10px 0px rgba(0,0,0,.15);
  }

  .video-social-action-{{ section.id }} svg {
    height: {{ action_icon_size_mobile }}px;
    width: {{ action_icon_size_mobile }}px;
  }

  .video-social-action-{{ section.id }} svg path {
    fill: {{ action_color }};
    transition: all 0.3s ease 0s;
  }

  .video-social-action-{{ section.id }}:hover {
    transition: all 0.3s ease 0s;
    border: {{ action_border_thickness }}px solid {{ action_border_hover_color }};
    background: {{ action_bg_hover_color | hex_to_rgba: 0.3 }};
  }

  .video-social-action-{{ section.id }}:hover svg path {
    fill: {{ action_hover_color }};
    transition: all 0.3s ease 0s;
  }

  .video-social-unmute-{{ section.id }} {
    display: none !important;
  }

  .video-social-action-{{ section.id }}.active .video-social-unmute-{{ section.id }} {
    display: block !important;
  }

  .video-social-action-{{ section.id }}.active .video-social-mute-{{ section.id }} {
    display: none !important;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .video-social-heading-{{ section.id }} {
      text-align: {{ heading_align }};
    }

    .video-social-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .video-social-subheading-{{ section.id }} {
      margin-top: {{ sub_heading_mt }}px;
      text-align: {{ sub_heading_align }};
    }

    .video-social-subheading-{{ section.id }} * {
      font-size: {{ sub_heading_size }}px;
    }

    .video-social-slider-{{ section.id }} {
      margin-top: {{ slider_mt }}px;
      margin-left: 0px !important;
      margin-right: 0px !important;
      padding-left: 0px !important;
      padding-right: 0px !important;
    }

    .video-social-info-{{ section.id }} {
      text-align: {{ info_align }};
      font-size: {{ info_size }}px;
    }

    .video-social-btn-prev-{{ section.id }},
    .video-social-btn-next-{{ section.id }} {
      width: {{ arrow_size }}px;
      height: {{ arrow_size }}px;
      transition: all 0.25s ease 0s;
    }

    .video-social-btn-prev-{{ section.id }} .animate-icon:before,
    .video-social-btn-next-{{ section.id }} .animate-icon:before {
      width: {{ arrow_icon_size }}px;
      height: {{ arrow_icon_size }}px;
    }

    .video-social-btn-prev-{{ section.id }} .animate-icon:after,
    .video-social-btn-next-{{ section.id }} .animate-icon:after {
      width: {{ arrow_icon_size | minus: 0.3 }}px;
    }

    .video-social-btn-prev-{{ section.id }} {
      left: 10px !important;
    }
  
    .video-social-btn-next-{{ section.id }} {
      right: 10px !important;
    }

    .video-social-btn-prev-{{ section.id }} svg,
    .video-social-btn-next-{{ section.id }} svg {
      height: {{ arrow_icon_size }}px;
      width: {{ arrow_icon_size }}px;
    }

    .video-social-action-{{ section.id }} {
      width: {{ action_size }}px;
      height: {{ action_size }}px;
    }

    .video-social-action-{{ section.id }} svg {
      height: {{ action_icon_size }}px;
      width: {{ action_icon_size }}px;
    }
  }
  
{%- endstyle -%}

