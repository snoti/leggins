  "name": "Bundle avec couleurs",
  "tag": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Produit de base"
    }
  ],
  "presets": [
    {
      "name": "Bundle avec couleurs"
    }
  ]
}
{% endschema %}