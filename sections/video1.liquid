<div class="section-{{ section.id }} video-image-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      <div class="video-image-body-{{ section.id }}">
        <div class="video-image-content-{{ section.id }}">
          {% if sub_heading != blank %}
            <div class="video-image-subheading-{{ section.id }}">
              {{ sub_heading }}
            </div>
          {% endif %}

          {% if heading != blank %}
            <div class="video-image-heading-{{ section.id }}">
              {{ heading }}
            </div>
          {% endif %}

          {% if text != blank %}
            <div class="video-image-text-{{ section.id }}">
              {{ text }}
            </div>
          {% endif %}

          <div class="video-image-items-{{ section.id }}">
            {% for block in section.blocks %}
              <{% if block.settings.product_url != blank %}a href="{{ block.settings.product_url }}"{% else %}div{% endif %} data-id="{{ block.id }}" class="video-image-item-{{ section.id }} {% if forloop.first %}active{% endif %}">
                {% if block.settings.product_image != blank %}
                  <img src="{{ block.settings.product_image | image_url }}" alt="{{ block.settings.product_image.alt }}">
                {% else %}
                  {{ 'image' | placeholder_svg_tag }}
                {% endif %}
              </{% if block.settings.product_url != blank %}a{% else %}div{% endif %}>
            {% endfor %}
          </div>
        </div>
        <div class="video-image-slider-wrapper-{{ section.id }}">
          <div class="video-image-slider-{{ section.id }} swiper">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="video-image-slide-{{ section.id }} swiper-slide" id="{{ block.id }}">
                  {% if block.settings.media_type == "image" %}
                    {% if block.settings.image != blank %}
                      <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" {% if forloop.first %}{% if lazy %}loading="lazy"{% endif %}{% endif %}>
                    {% else %}
                      {{ 'image' | placeholder_svg_tag }}
                    {% endif %}
                  {% else %}
                    {% if use_action %}
